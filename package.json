{
  "name": "@tolulikestocode/poly-state",
  "version": "1.0.9",
  "type": "module",
  "description": "Universal state management library for TypeScript and React",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ToluLikesToCode/poly-state.git"
  },
  "homepage": "https://github.com/ToluLikesToCode/poly-state#readme",
  "bugs": {
    "url": "https://github.com/ToluLikesToCode/poly-state/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.esm.js",
      "require": "./dist/react.js"
    }
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:core": "vitest run test/core",
    "test:react": "vitest run test/react",
    "test:browser": "vitest --config vitest.browser.config.ts",
    "test:browser:run": "vitest --config vitest.browser.config.ts --run",
    "test:all": "npm run test:run && npm run test:browser:run",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run build",
    "clean": "rm -rf dist coverage",
    "pub:local": "yalc publish --push"
  },
  "keywords": [
    "state-management",
    "typescript",
    "react",
    "store",
    "immutable",
    "persistence",
    "undo-redo"
  ],
  "author": "ToluLikesToCode",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.0.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "jsan": "^3.1.14",
    "redux": "^5.0.1",
    "zod": "^4.0.14"
  }
}
